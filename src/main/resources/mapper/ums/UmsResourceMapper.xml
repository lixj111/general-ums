    <select id="getResourceListByRoleId" resultType="com.mall_tiny.modules.ums.model.UmsResource">
        select r.*
        from ums_role_resource_relation rr left join ums_resource r on rr.resource_id = r.id
        where rr.role_id = #{roleId} and r.id is not null
        group by r.id
